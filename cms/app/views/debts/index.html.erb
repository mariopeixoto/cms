<div>
  <h1 class='table-title'>Debts</h1>
  <div class='table-actions'>
    <%= link_to 'New Debt', new_debt_path, class: 'btn btn-primary', role: 'button' %>
  </div>
</div>

<table class='table table-hover'>
  <thead>
    <tr>
      <th>#</th>
      <th>Description</th>
      <th>Original amount</th>
      <th>Due date</th>
      <th>Debt type</th>
      <th>Unit</th>
      <th>Tenant</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @debts.each do |debt| %>
      <tr>
        <td><%= link_to debt.id, debt %></td>
        <td><%= debt.description %></td>
        <td><%= debt.original_amount %></td>
        <td><%= debt.due_date %></td>
        <td><%= debt.debt_type.humanize %></td>
        <td><%= debt.unit.condo.name %> - <%= debt.unit.number %></td>
        <td><%= debt.tenant.name %></td>
        <td><%= link_to 'Edit', edit_debt_path(debt) %></td>
        <td><%= link_to 'Destroy', debt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
