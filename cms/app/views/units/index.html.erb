<h1>Listing units</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Building name</th>
      <th>Condo</th>
      <th>Tenant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @units.each do |unit| %>
      <tr>
        <td><%= unit.number %></td>
        <td><%= unit.building_name %></td>
        <td><%= unit.condo.name %></td>
        <td><%= unit.tenant.present? ? unit.tenant.name : '' %></td>
        <td><%= link_to 'Show', unit %></td>
        <td><%= link_to 'Edit', edit_unit_path(unit) %></td>
        <td><%= link_to 'Destroy', unit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Unit', new_unit_path %>
